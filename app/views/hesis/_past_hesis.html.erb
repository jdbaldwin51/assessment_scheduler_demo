

<% Hesi.past_hesi_dates.each do |date| %>
  <h1><strong><%= "#{Hesi.day_of_week(date)}, #{ Hesi.date(date) }" %></strong></h1>
  <% Hesi.times_for_day[Hesi.day_of_week(date)].each do |time| %>
    <div class="relative flex h-16 items-center justify-between">
    <h2 class="inline-flex items-center justify-center "><strong><%= time %></strong></h2>
    <h3 class="clear-right"><%= Hesi.student_count(date, time) %></h3>
    </div>
<div class="flex flex-col">
    <div class="pb-10">
      <table class="relative w-full border">
        <thead>
          <tr>
            <th class="sticky top-0 px-6 py-3 text-white bg-blue-300">Student name</th>
            <th class="sticky top-0 px-6 py-3 text-white bg-blue-300">Advisor</th>
            <th class="sticky top-0 px-6 py-3 text-white bg-blue-300">Program</th>
            <th class="sticky top-0 px-6 py-3 text-white bg-blue-300">Wonderlic Score</th>
            <th class="sticky top-0 px-6 py-3 text-white bg-blue-300">phone number</th>
            <th class="sticky top-0 px-6 py-3 text-white bg-blue-300">Attempt Number</th>
            <th class="sticky top-0 px-6 py-3 text-white bg-blue-300"></th>
          </tr>
        </thead>
        <tbody class="divide-y bg-blue-100">

        <% Hesi.testers_for_date_and_time(date, Hesi.test_times[time]).each do |student| %>
          <tr>
            <td class="px-6 py-4 text-center"><%= link_to student.name, student_path(student) %></td>
            <td class="px-6 py-4 text-center"><%= link_to student.advisor.name, advisor_path(student.advisor) %> </td>
            <td class="px-6 py-4 text-center"><%= link_to student.program.name, program_path(student.program) %></td>
            <td class="px-6 py-4 text-center"><%= student.sle %></td>
            <td class="px-6 py-4 text-center"><%= student.phone %></td>
            <td class="px-6 py-4 text-center"><%= student.attempt_number %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
   </div>
 </div>

<% end %>
<% end %>
