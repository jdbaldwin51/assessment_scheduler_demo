<div id="<%= dom_id advisor %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= advisor.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= advisor.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Invitation code:</strong>
    <%= advisor.invitation_code %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this advisor", advisor, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this advisor', edit_advisor_path(advisor), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
