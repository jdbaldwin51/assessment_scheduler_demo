<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @program %>

    <div class="flex flex-col h-screen">
    <div class="flex-grow overflow-auto">
      <table class="relative w-full border">
        <thead>
          <tr>
            <th class="sticky top-0 px-6 py-3 text-white bg-blue-300">Student name</th>
            <th class="sticky top-0 px-6 py-3 text-white bg-blue-300">Wonderlic Score</th>
            <th class="sticky top-0 px-6 py-3 text-white bg-blue-300">Phone Number</th>
            <th class="sticky top-0 px-6 py-3 text-white bg-blue-300">Hesi Date</th>
            <th class="sticky top-0 px-6 py-3 text-white bg-blue-300">Hesi Time</th>
          </tr>
        </thead>
        <tbody class="divide-y bg-blue-100">

 <% @program.students.sort.each do |student| %> 
          <tr>
            <td class="px-6 py-4 text-center"><%= link_to student.name, student_path %></td>
            <td class="px-6 py-4 text-center"><%= student.sle %></td>
            <td class="px-6 py-4 text-center"><%= student.phone %></td>
            <td class="px-6 py-4 text-center"><%= student.hesi_date %></td>
            <td class="px-6 py-4 text-center"><%= Hesi.test_times.keys[student.hesi_time] %></td>

   
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div>

    <%= link_to 'Edit this program', edit_program_path(@program), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this program', program_path(@program), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to programs', programs_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
